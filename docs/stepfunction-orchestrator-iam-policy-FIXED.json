{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DynamoDBAndEventsAccess",
      "Effect": "Allow",
      "Action": [
        "events:PutTargets",
        "events:DescribeRule",
        "secretsmanager:GetSecretValue",
        "events:RetrieveConnectionCredentials",
        "secretsmanager:DescribeSecret",
        "dynamodb:PutItem",
        "events:PutRule",
        "dynamodb:UpdateItem"
      ],
      "Resource": [
        "arn:aws:secretsmanager:ap-northeast-1:002689294103:secret:events!connection/Stripe-subscriptions-Connection/d0df70f5-2599-47c6-8712-036969261bae-IzebCf",
        "arn:aws:dynamodb:ap-northeast-1:002689294103:table/siftbeam-processing-history/index/*",
        "arn:aws:dynamodb:ap-northeast-1:002689294103:table/siftbeam-processing-history",
        "arn:aws:events:ap-northeast-1:002689294103:rule/StepFunctionsGetEventsForStepFunctionsExecutionRule",
        "arn:aws:events:ap-northeast-1:002689294103:connection/Stripe-subscriptions-Connection/*"
      ]
    },
    {
      "Sid": "DynamoDBReadAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:Query"
      ],
      "Resource": [
        "arn:aws:dynamodb:ap-northeast-1:002689294103:table/siftbeam-policy-stepfunction-mapping/index/*",
        "arn:aws:dynamodb:ap-northeast-1:002689294103:table/siftbeam-policy-stepfunction-mapping"
      ]
    },
    {
      "Sid": "StepFunctionsAndLoggingAccess",
      "Effect": "Allow",
      "Action": [
        "xray:PutTelemetryRecords",
        "logs:DescribeLogGroups",
        "states:StopExecution",
        "logs:GetLogDelivery",
        "xray:GetSamplingTargets",
        "logs:ListLogDeliveries",
        "xray:PutTraceSegments",
        "logs:CreateLogDelivery",
        "logs:PutResourcePolicy",
        "states:DescribeExecution",
        "logs:UpdateLogDelivery",
        "xray:GetSamplingRules",
        "states:StartExecution",
        "logs:DeleteLogDelivery",
        "logs:DescribeResourcePolicies"
      ],
      "Resource": "*"
    },
    {
      "Sid": "InvokeHTTPEndpoint",
      "Effect": "Allow",
      "Action": [
        "states:InvokeHTTPEndpoint"
      ],
      "Resource": [
        "arn:aws:states:ap-northeast-1:002689294103:stateMachine:ServiceProcessingOrchestrator",
        "arn:aws:states:ap-northeast-1:002689294103:execution:ServiceProcessingOrchestrator:*"
      ],
      "Condition": {
        "StringEquals": {
          "states:HTTPMethod": "POST"
        },
        "StringLike": {
          "states:HTTPEndpoint": "https://api.stripe.com/*"
        }
      }
    }
  ]
}

